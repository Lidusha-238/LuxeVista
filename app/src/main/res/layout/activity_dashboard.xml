<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:padding="20dp"
    tools:context=".DashboardActivity">

    <ImageButton
        android:id="@+id/btnNotifications"
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:contentDescription="Notifications"
        android:padding="5dp"
        android:src="@drawable/notification"
        app:tint="@color/white"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp" />

    <ScrollView
        android:id="@+id/dashboardScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnNotifications">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Welcome to LuxeVista Resort"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold" />

            <!-- Dashboard Grid -->
            <GridLayout
                android:id="@+id/dashboardGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- Card 1: Rooms -->

                <!-- Card 2: Services -->
                <LinearLayout
                    android:id="@+id/btnRooms"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:clipToOutline="true"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:onClick="openRooms"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:padding="10dp"
                    android:translationZ="4dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/room" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Rooms"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnServices"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:clipToOutline="true"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:onClick="openServices"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:padding="10dp"
                    android:translationZ="4dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/vacation" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Services"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Card 3: Attractions -->
                <LinearLayout
                    android:id="@+id/btnAttractions"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:clipToOutline="true"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:onClick="openAttractions"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:padding="10dp"
                    android:translationZ="4dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/attractions" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Attractions"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Card 4: Profile -->
                <LinearLayout
                    android:id="@+id/btnProfile"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:clipToOutline="true"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:onClick="openProfile"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:padding="10dp"
                    android:translationZ="4dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/profile" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Profile"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
