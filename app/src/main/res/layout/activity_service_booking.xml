<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceBookingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtServiceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:gravity="center"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/txtServicePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$150"
                android:textSize="18sp"
                android:textColor="#666"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <EditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/blue"
                android:hint="Enter Full Name"
                android:inputType="textPersonName"
                android:padding="12dp" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/blue"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:padding="12dp" />

            <EditText
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/blue"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:padding="12dp" />

            <EditText
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Date"
                android:focusable="false"
                android:backgroundTint="@color/blue"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- NEW: Check-in Time Picker -->
            <EditText
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Check-in Time"
                android:focusable="false"
                android:backgroundTint="@color/blue"
                android:padding="12dp"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/btnBookService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/blue"
                android:elevation="3dp"
                android:padding="12dp"
                android:text="Confirm Reservation"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
